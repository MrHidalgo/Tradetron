.strategy__option.mb-4.align-items-center.justify-content-between
	div.d-flex.align-items-center
		p.strategy__option-title!= "Search Strategies"

		.strategy__option-search
			.input-group.input-group--reverse
				input.form-control(type='text', placeholder='Search startegy')
				.input-group-append
					button.btn.btn-outline-secondary(type='button')
						i.icon-font.icon-search

	div
		a.strategy__option-btn.d-flex.justify-content-center.align-items-center(href="#" class="" title="" data-toggle="modal" data-target="#deployedFilterModal")
			i.icon-font.icon-filter
			span!= "Filters"

